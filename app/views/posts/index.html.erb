<%= render 'shared/content_title', title: "All Posts" %>

<% @posts.each do |post| %>
  <div class='row'>
    <div class='span8 well'>
      <%= render post.categories %>
      <h4><%= link_to post.title, post.url %></h4>
      <span class='quiet'><%= link_to 'edit', edit_post_path(post) %></span>
      <p><%= post.description %></p>
      <%= render "shared/created_by_at", username: post.user.username, created_at: post.created_at%>
      <small><span><%= link_to "#{post.comments.count} Comments", post_path(post.id) %></span></small>
    </div>
  </div>
<% end %>
