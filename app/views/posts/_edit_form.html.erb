<% if @post.errors.any? %>
  <div class='alert alert-error'>
    <h5>There were some errors that prevented the post from being created. Please correct them.</h5>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title:", class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :url, "URL:", class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :url, class: "form-control" %>
    </div>
  </div>
  <br/>
  <div class="form-group">
    <%= f.label :description, "Description:", class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <br/>
  <%= f.submit "Save Post", class: 'btn btn-success' %>
<% end %>